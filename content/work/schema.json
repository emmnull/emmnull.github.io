{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "year": {
      "type": "number"
    },
    "title": {
      "type": "string"
    },
    "disciplines": {
      "uniqueItems": true,
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "frontend",
          "backend",
          "design",
          "cognition",
          "ix",
          "ux",
          "research"
        ]
      }
    },
    "summary": {
      "type": "string"
    },
    "url": {
      "type": "string",
      "format": "uri"
    },
    "repoUrl": {
      "type": "string",
      "format": "uri"
    }
  }
}